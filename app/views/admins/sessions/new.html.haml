%h2= t "admins.ui.titles.sign_in"
= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  %div
    = f.email_field :email, :autofocus => true, placeholder: t 'admins.model.email'
  %div
    = f.password_field :password, placeholder: t 'admins.model.password'

  - if devise_mapping.rememberable?
    %div
      = f.check_box :remember_me
      = f.label :remember_me
  %div= f.submit t "admins.ui.titles.sign_in"
= render "admins/shared/links"
