%h2= t "admins.ui.titles.resend_confirmation"

= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post }) do |f|
  = devise_error_messages!

  %div
    = f.email_field :email, :autofocus => true, placeholder: t "admins.models.email"

  %div
    = f.submit t "admins.ui.titles.resend_confirmation"

= render "admins/shared/links"
