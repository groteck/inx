%h2= t 'admins.ui.titles.forgot_password'
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
  = devise_error_messages!
  %div
    = f.email_field :email, :autofocus => true, placeholder: t 'admins.model.email'
  %div= f.submit t "admins.ui.submits.send_password"
= render "admins/shared/links"
