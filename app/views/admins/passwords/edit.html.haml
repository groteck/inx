%h2= t 'admins.ui.titles.change_password' 
= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!
  = f.hidden_field :reset_password_token
  %div
    = f.password_field :password, :autofocus => true, 
      \ placeholder: t "admins.ui.placeholders.new_password" 
  %div
    = f.password_field :password_confirmation, placeholder: t "admins.ui.placeholders.new_password"
  %div= f.submit t "admins.ui.submits.change_password"
= render "admins/shared/links"
